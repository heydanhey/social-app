<!DOCTYPE html>
<html>
<head>
  <title>WeFreshed</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= include_gon %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href='https://fonts.googleapis.com/css?family=Questrial|Montserrat' rel='stylesheet' type='text/css'>

</head>

<body>
  <div class="container">
<!-- FLASH MESSAGE -->

    <div class="container">
      <% flash.each do |name, message| %>
        <div class="alert alert-<%= name == "alert" || name == "notice" ? "warning" : "name" %> alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= message %>
          </div>
      <% end %>
    </div>

 
      <%= yield %>


<div class="navbar navbar-inverse navbar-fixed-bottom">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">WeFreshed</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        
        <% if user_signed_in? %>

        <li><a href="/posts/<%= Post.get_post_by_location(current_user).id %>"><span class="glyphicon glyphicon-home" aria-hidden="true"></a></li>

        <li><a href="/posts/new"><span class="glyphicon glyphicon-edit" aria-hidden="true"></a></li>

        <li><a href="/users/<%= current_user.id %>"><span class="glyphicon glyphicon-user" aria-hidden="true"></a></li>

        <li><a href="/weefs"><span class="glyphicon glyphicon-heart" aria-hidden="true"> <%= @weef_count %></a></li>
    <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
    <% else %>
    <li><%= link_to "Sign in", new_user_session_path %></li>
    <li><%= link_to "Sign up", new_user_registration_path %></li>
    <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>

    
  </div>
</body>
</html>
