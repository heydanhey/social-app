<!DOCTYPE html>
<html>
<head>
  <title>WeFreshed</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= include_gon %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href='https://fonts.googleapis.com/css?family=Questrial|Montserrat' rel='stylesheet' type='text/css'>

</head>

<body>
<!-- ui-8 -->
    <div class="ui-8">
      <!-- UI head -->
      <div class="ui-head">
        <!-- Button -->
        <a href="#" class="bg-lblue">Menu</a>
      </div>
      <!-- UI content -->
      <div class="ui-content">
        <!-- Container fluid -->
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-2 col-sm-2 col-xs-4 ui-padd">
              <!-- UI item -->
              <div class="ui-item">
                <!-- Image -->
                <a href="#"><img src="img/ui-8/1.png" alt="" class="img-responsive" /></a>
                <!-- Heading -->
                <h6><a href="/posts/<%= Post.get_post_by_location(current_user).id %>">View</a></h6>
              </div>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-4 ui-padd">
              <!-- UI iteme -->
              <div class="ui-item">
                <!-- Image -->
                <a href="#"><img src="img/ui-8/2.png" alt="" class="img-responsive" /></a>
                <!-- Heading -->
                <h6><a href="/posts/new">New</a></h6>
              </div>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-4 ui-padd">
              <div class="ui-item">
                <a href="#"><img src="img/ui-8/3.png" alt="" class="img-responsive" /></a>
                <h6><a href="#">Crown</a></h6>
              </div>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-4 ui-padd">
              <div class="ui-item">
                <a href="#"><img src="img/ui-8/4.png" alt="" class="img-responsive" /></a>
                <h6><a href="#">Diamond</a></h6>
              </div>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-4 ui-padd">
              <div class="ui-item">
                <a href="#"><img src="img/ui-8/5.png" alt="" class="img-responsive" /></a>
                <h6><a href="#">Location</a></h6>
              </div>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-4 ui-padd">
              <!-- UI Item -->
              <div class="ui-item">
                <!-- Image -->
                <a href="#"><img src="img/ui-8/6.png" alt="" class="img-responsive" /></a>
                <!-- Heading -->
                <h6><a href="#">Search</a></h6>
              </div>
            </div>
          </div>
           
          
        </div><!-- /Container fluid -->
      </div><!-- /UI Content -->
    </div><!-- /ui-8 -->
    



  <div class="container">
<!-- FLASH MESSAGE -->

    <div class="container">
      <% flash.each do |name, message| %>
        <div class="alert alert-<%= name == "alert" || name == "notice" ? "warning" : "name" %> alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= message %>
          </div>
      <% end %>
    </div>

 
      <%= yield %>
    
  </div>
</body>
</html>
