<div class="jumbotron devise">

  <%= image_tag("wefresh_logo_2.png") %>

  <h2>Sign up</h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">   
      <%= f.email_field :email, autofocus: true, placeholder: "Feed me your email" %>
    </div>

    <div class="field">
      
      <% if @minimum_password_length %>

      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Create a Password" %>
    </div>
  <br />
    <div class="field">

      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
    </div>
  <br />
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
  <% end %>
  <br />

</div>
