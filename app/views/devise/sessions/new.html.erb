<div class="jumbotron">
  <div class="devise">

  <%= image_tag("wefresh_logo_3.jpg") %>

  <h2>Sign in</h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Feed me your Email" %>
    </div>
<br />
    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Feed me your Password" %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <h6><%= f.check_box :remember_me %>
        <%= f.label :remember_me %> </h6>
      </div>
    <% end -%>
<br />
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-default" %>
      <%= link_to "Forgot Password?", "/users/password/new", class: "btn btn-default" %>
    </div>
  <% end %>
<br />
  </div>
</div>

