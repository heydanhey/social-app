<div id="touchsurface3" class="main-container">
  <div class="jumbotron devise">
    <a href="/landing/"><%= image_tag("wefresh_logo_2.png") %></a>
    <h2>Sign in</h2>
    <div class="form-group" style="max-width:400px;margin:auto;">
      <hr>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Feed me your Email", class: "form-control" %>
        </div>
        <br />
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Feed me your Password", class: "form-control" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field text-left">
            <h6><%= f.check_box :remember_me %>
            <%= f.label :remember_me %> </h6>
          </div>
        <% end -%>
        <br />
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-success round" %>
        </div>
      <% end %>
      <hr>
    </div>
    <p> Don't have an account? <%= link_to "Sign up here", "/users/sign_up", style: "color: #ED5723" %> </p>
  </div>
</div>
