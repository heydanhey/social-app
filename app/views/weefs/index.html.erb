<div id="touchsurface3" class="main-container">
<div class="jumbotron weef"> 
  <div>
    
    <div style="display: inline-block;">
      <%= image_tag("Weef.png", size: "200x200") %>
    </div>

    <div style="display: inline-block;">
      <% if @weef_count == 1 %>
        <h3>Congratulations! </h3>
        <h4>You have <%= @weef_count %> weef!</h4> 
      <% elsif @weef_count > 1 %>
        <h3>Congratulations! </h3>
        <h4>You have <%= @weef_count %> weefs! </h4>
      <% else %>
        <h4>Oh no, you haveen no weefs.</h4>
        <h4>Please keep weacting!</h4>
      <% end %>
    </div>
    <hr>

    <div id='mySwipe' class='swipe'>
      <div class='swipe-wrap'>
      <% @weefs.each_with_index do |weef, index| %>
        <div>
          <div class="weef-heading"> You weef'd with: <%= weef.weefer(current_user.id).name%>! This Weef will expire on <%= weef.expiration %></div>
          <hr>

          <div class="col-md-6">
            <h3> this was your post: </h3>
            <div class="w1">
              <h2>"<%= weef.my_post(current_user.id).text %>"</h2>
                <%= image_tag("#{weef.my_post(current_user.id).emotion_id}.png") %>
            </div>
          </div>

          <div class="col-md-6">
            <h3> this was their post: </h3>
            <div class="w2">
                <h2>"<%= weef.their_post(current_user.id).text %>"</h2>
                <%= image_tag("#{weef.their_post(current_user.id).emotion_id}.png") %>
              </div>
          </div>

          <div class="weef-menu col-xs-12">
            <div class="col-md-4">
              <%= link_to "See your weefer's posts", "/weefs/#{weef.weefer(current_user.id).id}?their_posts=id", class: "btn btn-default weef-btn" %>
            </div>

            <div class="col-md-4">
              <%= link_to "See your weefer's weactions", "/weefs/#{weef.weefer(current_user.id).id}?their_weactions=id", class: "btn btn-default weef-btn" %>
            </div>

              <% if  (weef.chats.where(served: false).where.not(user_id: [nil, current_user.id]).count) > 0 %>

                <div class="col-md-4">
                  <%= link_to "enter weef chat | #{weef.chats.where(served: false).where.not(user_id: [nil, current_user.id]).count} NEW!", "/chats/#{weef.id}", class: "btn btn-default weef-btn" %>
                </div>

              <% else %>

                <div class="col-md-4">
                  <%= link_to "enter weef chat", "/chats/#{weef.id}", class: "btn btn-default weef-btn" %>
                </div>

              <% end %>

          </div>
        </div>
        <% end %>
      </div>

    <% if @weef_count > 1 %>
      <div style='text-align:center;padding-top:20px;'>
        <button onclick='mySwipe.prev()'>prev</button> 
        <button onclick='mySwipe.next()'>next</button>
      </div>  
    <% end %> 

  </div>
</div>


