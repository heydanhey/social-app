<h3>Post Show</h3>

<h1><%= @post.text %> </h1>

<%= link_to "Excited", "/posts/#{@post.id}?excited=id", class: "btn btn-default" %>

<%= link_to "Amused", "/posts/#{@post.id}?amused=id", class: "btn btn-default" %>

<%= link_to "Annoyed", "/posts/#{@post.id}?annoyed=id", class: "btn btn-default" %>

<%= link_to "Sympathetic", "/posts/#{@post.id}?sympathetic=id", class: "btn btn-default" %>

<p></p>
<%= link_to "Next Post", "/posts/#{@post.id}?random_next=id", class: "btn btn-default" %>

<%= link_to "Edit Post", "/posts/#{@post.id}/edit", class: "btn btn-default" %>

<%= link_to "Delete Post", "/posts/#{@post.id}", method: :delete, data:{confirm: "Are You Sure"}, class: "btn btn-default" %>