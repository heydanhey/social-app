<div class="jumbotron">

  <% if user_signed_in? %>

    <h1><%= @post.text %></h1>

   
  <% else %>

    <h1>Welcome, you're not logged in!</h1>

    <p class="lead">
      You must sign in or sign up before you can access our super sweet,
      top secret content.
    </p>
    
    <div class="row-fluid">
      <div class="span6">
        <%= link_to "Sign In", new_user_session_path, :class => "btn btn-success" %>
      
      
        <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>

</div>

<div class="posts">

    <%= link_to image_tag("Up.png"), "/posts/#{@post.id}?excited=id" %>

    <%= link_to image_tag("Right.png"), "/posts/#{@post.id}?amused=id" %>

    <%= link_to image_tag("Down.png"), "/posts/#{@post.id}?sympathetic=id" %>

    <%= link_to image_tag("Left.png"), "/posts/#{@post.id}?annoyed=id" %>

    <br>

    <%= link_to "Excited (up)", "/posts/#{@post.id}?excited=id", class: "btn btn-default" %>

    <%= link_to "Amused (right)", "/posts/#{@post.id}?amused=id", class: "btn btn-default" %>

    <%= link_to "Sympathetic (down)", "/posts/#{@post.id}?sympathetic=id", class: "btn btn-default" %>

    <%= link_to "Annoyed (left)", "/posts/#{@post.id}?annoyed=id", class: "btn btn-default" %>

</div>
